<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThermondoRover" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/curiosityAccent0</item>
        <item name="colorPrimaryVariant">@color/curiosityAccent1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/curiosityDark2</item>
        <item name="colorSecondaryVariant">@color/curiosityDark0</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Additional MDC colors. -->
        <item name="colorSurface">@color/curiosityBright2</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/curiosityBright2</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/Widget.ThermondoRover.Toolbar</item>
    </style>

    <style name="PhotoList">
        <item name="android:background">@color/curiosityDark2</item>
    </style>
    <style name="PhotoListItem">
        <item name="cardBackgroundColor">@color/curiosityBright1</item>
    </style>


    <style name="Widget.ThermondoRover.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ThermondoRover.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.ThermondoRover.TitleLarge</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.ThermondoRover.TitleMedium</item>
    </style>

    <style name="ThemeOverlay.ThermondoRover.Toolbar" parent="">
        <item name="colorSurface">@color/curiosityAccent0</item>
        <item name="colorOnSurface">@color/curiosityDark0</item>
    </style>

    <style name="TextAppearance.ThermondoRover.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/oxygen_bold</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="TextAppearance.ThermondoRover.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/oxygen_bold</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>
</resources>