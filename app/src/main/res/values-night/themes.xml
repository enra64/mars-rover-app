<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rover" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marsAccent0</item>
        <item name="colorPrimaryVariant">@color/marsDark0</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Additional MDC colors. -->
        <item name="colorSurface">@color/marsBlack0</item>
        <item name="colorOnSurface">@color/marsBright1</item>
        <item name="android:colorBackground">@color/marsBlack0</item>
        <item name="colorOnBackground">@color/marsBright1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/Widget.Rover.Toolbar</item>
    </style>

    <style name="PhotoList">
        <item name="android:background">@color/marsBlack1</item>
    </style>
    <style name="PhotoListItem">
        <item name="cardBackgroundColor">@color/marsBlack0</item>
    </style>

    <style name="ThemeOverlay.Rover.Toolbar" parent="">
        <item name="colorSurface">@color/marsAccent0</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>