<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/photo_list_fragment">

    <fragment
        android:id="@+id/photo_list_fragment"
        android:name="de.arneherdick.thermondorover.photo_list.ui.MarsPhotoListFragment"
        android:label="@string/list_fragment_title">
        <action
            android:id="@+id/show_photo_detail"
            app:destination="@id/photo_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/photo_detail_fragment"
        android:name="de.arneherdick.thermondorover.photo_details.ui.MarsPhotoDetailFragment"
        android:label="photo_detail"
        tools:layout="@layout/fragment_photo_details">
        <argument
            android:name="photo"
            app:argType="de.arneherdick.thermondorover.mars_rover_api.models.MarsPhoto" />
        <argument
            android:name="needsUpButton"
            app:argType="boolean" />
    </fragment>
</navigation>